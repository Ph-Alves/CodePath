{{!-- Empty State para Atividade de Progresso - CodePath --}}
<div class="empty-state empty-small empty-default" 
     data-aos="fade-up" 
     data-illustration="rocket">
    <div class="empty-content">
        <!-- Ilustração SVG -->
        <div class="empty-illustration">
            <!-- Conteúdo será inserido dinamicamente -->
        </div>
        
        <!-- Texto do Estado Vazio -->
        <div class="empty-text">
            <h3 class="empty-title">Nenhuma atividade recente</h3>
            <p class="empty-message">Continue estudando para ver suas conquistas e atividades aparecerem aqui. Cada aula concluída é um passo para o sucesso!</p>
        </div>
        
        <!-- Botões de Ação -->
        <div class="empty-actions">
            <a href="/dashboard" class="btn btn-primary empty-action-btn">
                <span class="btn-text">Continuar Estudando</span>
                <div class="btn-ripple"></div>
            </a>
        </div>
        
        <!-- Elementos Decorativos -->
        <div class="empty-decorations">
            <div class="decoration decoration-1"></div>
            <div class="decoration decoration-2"></div>
            <div class="decoration decoration-3"></div>
        </div>
    </div>
</div> 