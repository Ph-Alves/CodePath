{{!-- Empty State para Chat Público - CodePath --}}
<div class="empty-state empty-medium empty-info" 
     data-aos="fade-up" 
     data-illustration="chat">
    <div class="empty-content">
        <!-- Ilustração SVG -->
        <div class="empty-illustration">
            <!-- Conteúdo será inserido dinamicamente -->
        </div>
        
        <!-- Texto do Estado Vazio -->
        <div class="empty-text">
            <h3 class="empty-title">Chat público vazio</h3>
            <p class="empty-message">Seja o primeiro a iniciar uma conversa! Compartilhe suas dúvidas, experiências ou apenas cumprimente outros estudantes.</p>
        </div>
        
        <!-- Botões de Ação -->
        <div class="empty-actions">
            <button onclick="focusChatInput()" class="btn btn-primary empty-action-btn">
                <span class="btn-text">Iniciar Conversa</span>
                <div class="btn-ripple"></div>
            </button>
        </div>
        
        <!-- Elementos Decorativos -->
        <div class="empty-decorations">
            <div class="decoration decoration-1"></div>
            <div class="decoration decoration-2"></div>
            <div class="decoration decoration-3"></div>
        </div>
    </div>
</div> 