<!-- Sidebar Principal -->
<aside class="sidebar" id="sidebar">
    <!-- Header da Sidebar -->
    <div class="sidebar-header">
        <div class="logo-container">
            <img src="/images/logoCodePath.png" alt="CodePath Logo" class="logo">
            <h1 class="logo-text">CodePath</h1>
        </div>
        <button class="sidebar-toggle mobile-only" id="sidebarClose" aria-label="Fechar menu">
            <i class="fas fa-times"></i>
        </button>
    </div>
    
    <!-- Navegação Principal -->
    <nav class="sidebar-nav" role="navigation">
        <ul class="nav-list">
            <!-- Dashboard -->
            <li class="nav-item">
                <a href="/dashboard" class="nav-link {{#isDashboard}}active{{/isDashboard}}" title="Dashboard">
                    <i class="fas fa-home nav-icon"></i>
                    <span class="nav-text">Dashboard</span>
                </a>
            </li>
            
            <!-- Carreiras -->
            <li class="nav-item">
                <a href="/careers" class="nav-link {{#isCareers}}active{{/isCareers}}" title="Carreiras">
                    <i class="fas fa-road nav-icon"></i>
                    <span class="nav-text">Carreiras</span>
                </a>
            </li>
            
            <!-- Minha Área -->
            <li class="nav-item">
                <a href="/my-area" class="nav-link {{#isMyArea}}active{{/isMyArea}}" title="Minha Área">
                    <i class="fas fa-user nav-icon"></i>
                    <span class="nav-text">Minha Área</span>
                </a>
            </li>
            
            <!-- Progresso -->
            <li class="nav-item">
                <a href="/progress" class="nav-link {{#isProgress}}active{{/isProgress}}" title="Meu Progresso">
                    <i class="fas fa-chart-line nav-icon"></i>
                    <span class="nav-text">Meu Progresso</span>
                </a>
            </li>
            
            <!-- Configurações -->
            <li class="nav-item">
                <a href="/settings" class="nav-link {{#isSettings}}active{{/isSettings}}" title="Configurações">
                    <i class="fas fa-cog nav-icon"></i>
                    <span class="nav-text">Configurações</span>
                </a>
            </li>
        </ul>
    </nav>
    
    <!-- Footer da Sidebar -->
    <div class="sidebar-footer">
        <!-- Informações do Usuário -->
        {{#user}}
        <div class="user-info">
            <div class="user-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="user-details">
                <span class="user-name">{{name}}</span>
                <span class="user-level">Nível {{level}}</span>
            </div>
        </div>
        {{/user}}
        
        <!-- Botão de Logout -->
        <form action="/logout" method="POST" class="logout-form">
            <button type="submit" class="logout-btn" title="Sair">
                <i class="fas fa-sign-out-alt"></i>
                <span class="logout-text">Sair</span>
            </button>
        </form>
    </div>
</aside> 