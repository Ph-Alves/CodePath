{{!-- Empty State para Salas de Chat - CodePath --}}
<div class="empty-state empty-small empty-info" 
     data-aos="fade-up" 
     data-illustration="chat">
    <div class="empty-content">
        <!-- Ilustração SVG -->
        <div class="empty-illustration">
            <!-- Conteúdo será inserido dinamicamente -->
        </div>
        
        <!-- Texto do Estado Vazio -->
        <div class="empty-text">
            <h3 class="empty-title">Nenhuma sala de chat</h3>
            <p class="empty-message">Não há salas de chat disponíveis no momento. Que tal participar do chat público e conhecer outros estudantes?</p>
        </div>
        
        <!-- Botões de Ação -->
        <div class="empty-actions">
            <button onclick="showPublicChat()" class="btn btn-primary empty-action-btn">
                <span class="btn-text">Ir para Chat Público</span>
                <div class="btn-ripple"></div>
            </button>
        </div>
        
        <!-- Elementos Decorativos -->
        <div class="empty-decorations">
            <div class="decoration decoration-1"></div>
            <div class="decoration decoration-2"></div>
            <div class="decoration decoration-3"></div>
        </div>
    </div>
</div> 