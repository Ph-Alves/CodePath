{{!-- 
    Partial de Estado Vazio - CodePath
    Componente reutilizável para exibir estados vazios
    
    Parâmetros esperados:
    - icon: Ícone a ser exibido (ex: "fas fa-bell-slash")
    - title: Título do estado vazio
    - message: Mensagem explicativa
    - actionText: Texto do botão de ação (opcional)
    - actionUrl: URL do botão de ação (opcional)
    - actionCallback: Função JavaScript para o botão (opcional)
    - size: Tamanho (small, medium, large)
--}}

<div class="empty-state {{#size}}empty-{{size}}{{/size}}{{^size}}empty-medium{{/size}}">
    <div class="empty-content">
        {{#icon}}
        <div class="empty-icon">
            <i class="{{icon}}"></i>
        </div>
        {{/icon}}
        
        <div class="empty-text">
            {{#title}}
            <h3 class="empty-title">{{title}}</h3>
            {{/title}}
            
            {{#message}}
            <p class="empty-message">{{message}}</p>
            {{/message}}
        </div>
        
        {{#actionText}}
        <div class="empty-actions">
            {{#actionUrl}}
            <a href="{{actionUrl}}" class="btn btn-primary empty-action-btn">
                {{actionText}}
            </a>
            {{/actionUrl}}
            {{#actionCallback}}
            <button onclick="{{actionCallback}}" class="btn btn-primary empty-action-btn">
                {{actionText}}
            </button>
            {{/actionCallback}}
            {{^actionUrl}}{{^actionCallback}}
            <button class="btn btn-primary empty-action-btn">
                {{actionText}}
            </button>
            {{/actionCallback}}{{/actionUrl}}
        </div>
        {{/actionText}}
    </div>
</div>

<style>
/* Estilos do Empty State */
.empty-state {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
    text-align: center;
    min-height: 200px;
}

.empty-content {
    max-width: 400px;
    width: 100%;
}

/* Ícone */
.empty-icon {
    margin-bottom: 1.5rem;
    color: var(--text-muted);
    opacity: 0.6;
}

.empty-icon i {
    font-size: 4rem;
}

/* Texto */
.empty-text {
    margin-bottom: 2rem;
}

.empty-title {
    color: var(--text-dark);
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
}

.empty-message {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
}

/* Ações */
.empty-actions {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
}

.empty-action-btn {
    padding: 0.75rem 1.5rem;
    font-size: 0.9rem;
    border-radius: 8px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
}

.empty-action-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    text-decoration: none;
    color: white;
}

/* Tamanhos */
.empty-small {
    padding: 2rem 1rem;
    min-height: 150px;
}

.empty-small .empty-icon i {
    font-size: 2.5rem;
}

.empty-small .empty-title {
    font-size: 1rem;
}

.empty-small .empty-message {
    font-size: 0.85rem;
}

.empty-small .empty-content {
    max-width: 300px;
}

.empty-large {
    padding: 4rem 2rem;
    min-height: 300px;
}

.empty-large .empty-icon i {
    font-size: 5rem;
}

.empty-large .empty-title {
    font-size: 1.5rem;
}

.empty-large .empty-message {
    font-size: 1rem;
}

.empty-large .empty-content {
    max-width: 500px;
}

/* Variações de cor */
.empty-state.empty-success .empty-icon {
    color: #10b981;
}

.empty-state.empty-warning .empty-icon {
    color: #f59e0b;
}

.empty-state.empty-error .empty-icon {
    color: #ef4444;
}

.empty-state.empty-info .empty-icon {
    color: var(--primary-color);
}

/* Responsividade */
@media (max-width: 768px) {
    .empty-state {
        padding: 2rem 1rem;
        min-height: 150px;
    }
    
    .empty-icon i {
        font-size: 3rem;
    }
    
    .empty-title {
        font-size: 1.1rem;
    }
    
    .empty-message {
        font-size: 0.9rem;
    }
    
    .empty-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .empty-action-btn {
        width: 100%;
        max-width: 200px;
        justify-content: center;
    }
}

/* Animação de entrada */
.empty-state {
    animation: fadeInUp 0.4s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style> 