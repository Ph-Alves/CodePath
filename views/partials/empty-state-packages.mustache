{{!-- Empty State para Pacotes - CodePath --}}
<div class="empty-state empty-medium empty-warning" 
     data-aos="fade-up" 
     data-illustration="search">
    <div class="empty-content">
        <!-- Ilustração SVG -->
        <div class="empty-illustration">
            <!-- Conteúdo será inserido dinamicamente -->
        </div>
        
        <!-- Texto do Estado Vazio -->
        <div class="empty-text">
            <h3 class="empty-title">Nenhum pacote encontrado</h3>
            <p class="empty-message">Não encontramos pacotes que correspondam aos seus filtros atuais. Que tal tentar uma busca diferente ou explorar todas as tecnologias disponíveis?</p>
        </div>
        
        <!-- Botões de Ação -->
        <div class="empty-actions">
            <button onclick="clearAllFilters()" class="btn btn-primary empty-action-btn">
                <span class="btn-text">Mostrar Todos os Pacotes</span>
                <div class="btn-ripple"></div>
            </button>
            <a href="/careers" class="btn btn-outline empty-action-btn">
                <span class="btn-text">Explorar Tecnologias</span>
                <div class="btn-ripple"></div>
            </a>
        </div>
        
        <!-- Elementos Decorativos -->
        <div class="empty-decorations">
            <div class="decoration decoration-1"></div>
            <div class="decoration decoration-2"></div>
            <div class="decoration decoration-3"></div>
        </div>
    </div>
</div> 