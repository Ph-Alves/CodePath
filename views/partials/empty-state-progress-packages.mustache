{{!-- Empty State para Progresso de Pacotes - CodePath --}}
<div class="empty-state empty-medium empty-info" 
     data-aos="fade-up" 
     data-illustration="trophy">
    <div class="empty-content">
        <!-- Ilustração SVG -->
        <div class="empty-illustration">
            <!-- Conteúdo será inserido dinamicamente -->
        </div>
        
        <!-- Texto do Estado Vazio -->
        <div class="empty-text">
            <h3 class="empty-title">Nenhum progresso registrado</h3>
            <p class="empty-message">Você ainda não começou nenhum pacote. Escolha uma tecnologia e comece sua jornada de aprendizado para ver seu progresso aqui!</p>
        </div>
        
        <!-- Botões de Ação -->
        <div class="empty-actions">
            <a href="/careers" class="btn btn-primary empty-action-btn">
                <span class="btn-text">Escolher Tecnologia</span>
                <div class="btn-ripple"></div>
            </a>
        </div>
        
        <!-- Elementos Decorativos -->
        <div class="empty-decorations">
            <div class="decoration decoration-1"></div>
            <div class="decoration decoration-2"></div>
            <div class="decoration decoration-3"></div>
        </div>
    </div>
</div> 