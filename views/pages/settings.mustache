<style>
/* Estilos para página de Configurações "Em Breve" */
.coming-soon-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--gray-200);
}

.page-header-content {
    display: flex;
    align-items: center;
    gap: 1.5rem;
}

.page-icon {
    width: 60px;
    height: 60px;
    background: var(--gradient-primary);
    border-radius: var(--border-radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
}

.page-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--gray-900);
    margin: 0;
}

.page-description {
    color: var(--gray-600);
    font-size: 1.1rem;
    margin: 0.5rem 0 0 0;
}

.coming-soon-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--gradient-accent);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-xl);
    font-weight: 600;
    font-size: 0.9rem;
    box-shadow: var(--shadow-md);
}

.preview-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 2rem;
    text-align: center;
}

.settings-categories {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
}

.settings-category {
    background: white;
    border-radius: var(--border-radius-xl);
    box-shadow: var(--shadow-md);
    border: 1px solid var(--gray-200);
    overflow: hidden;
    transition: all var(--transition-normal);
}

.settings-category:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-xl);
    border-color: var(--primary-purple-light);
}

.category-header {
    background: var(--gradient-secondary);
    color: white;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
}

.category-icon {
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: var(--border-radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
}

.category-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin: 0;
}

.settings-items {
    padding: 1.5rem;
}

.setting-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    color: var(--gray-700);
    border-bottom: 1px solid var(--gray-100);
    transition: color var(--transition-fast);
}

.setting-item:last-child {
    border-bottom: none;
}

.setting-item:hover {
    color: var(--primary-purple);
}

.setting-item i {
    width: 20px;
    color: var(--primary-purple-light);
    font-size: 0.9rem;
}

.cta-section {
    background: var(--gradient-primary);
    border-radius: var(--border-radius-2xl);
    padding: 3rem;
    text-align: center;
    color: white;
}

.cta-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
}

.cta-description {
    font-size: 1.1rem;
    opacity: 0.9;
    margin-bottom: 2rem;
}

.cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-lg);
    text-decoration: none;
    font-weight: 600;
    transition: all var(--transition-normal);
    border: 2px solid transparent;
}

.btn-primary {
    background: white;
    color: var(--primary-purple);
}

.btn-primary:hover {
    background: var(--gray-100);
    transform: translateY(-2px);
}

.btn-secondary {
    background: transparent;
    color: white;
    border-color: white;
}

.btn-secondary:hover {
    background: white;
    color: var(--primary-purple);
}

/* Responsividade */
@media (max-width: 768px) {
    .page-header {
        flex-direction: column;
        gap: 1.5rem;
        text-align: center;
    }
    
    .settings-categories {
        grid-template-columns: 1fr;
        gap: 1.5rem;
    }
    
    .cta-buttons {
        flex-direction: column;
        align-items: center;
    }
    
    .btn {
        width: 100%;
        max-width: 250px;
    }
}
</style>

