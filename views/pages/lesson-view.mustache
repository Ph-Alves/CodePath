<script>
// JavaScript para funcionalidades do player e marcação de progresso
document.addEventListener('DOMContentLoaded', function() {
  // Simulação do player de vídeo
  const playButton = document.getElementById('playButton');
  const playPauseBtn = document.getElementById('playPauseBtn');
  const videoPlaceholder = document.querySelector('.video-placeholder');
  
  let isPlaying = false;
  
  // Função para toggle play/pause
  function togglePlayPause() {
    isPlaying = !isPlaying;
    const icon = playPauseBtn.querySelector('i');
    
    if (isPlaying) {
      icon.className = 'icon-pause';
      videoPlaceholder.style.opacity = '0.8';
    } else {
      icon.className = 'icon-play';
      videoPlaceholder.style.opacity = '1';
    }
  }
  
  // Event listeners
  playButton.addEventListener('click', togglePlayPause);
  playPauseBtn.addEventListener('click', togglePlayPause);
  
  // Marcar aula como concluída
  const markCompleteBtn = document.getElementById('markCompleteBtn');
  
  markCompleteBtn.addEventListener('click', async function() {
    const lessonId = this.getAttribute('data-lesson-id');
    
    try {
      this.disabled = true;
      this.innerHTML = '<i class="icon-loader" aria-hidden="true"></i> Marcando...';
      
      const response = await fetch(`/content/lesson/${lessonId}/complete`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        }
      });
      
      const data = await response.json();
      
      if (data.success) {
        this.innerHTML = '<i class="icon-check" aria-hidden="true"></i> Concluída!';
        this.className = 'btn btn-success';
        
        // Mostrar mensagem de sucesso
        showFlashMessage('success', data.message);
        
        // Se há próxima aula, mostrar opção
        if (data.nextLesson) {
          setTimeout(() => {
            if (confirm(`Deseja ir para a próxima aula: ${data.nextLesson.name}?`)) {
              window.location.href = data.nextLesson.url;
            }
          }, 1500);
        }
      } else {
        throw new Error(data.message);
      }
    } catch (error) {
      console.error('Erro ao marcar aula como concluída:', error);
      showFlashMessage('error', 'Erro ao marcar aula como concluída');
      
      this.disabled = false;
      this.innerHTML = '<i class="icon-check" aria-hidden="true"></i> Marcar como Concluída';
    }
  });
  
  // Função para mostrar flash messages
  function showFlashMessage(type, message) {
    const flashDiv = document.createElement('div');
    flashDiv.className = `flash-message flash-${type}`;
    flashDiv.setAttribute('role', 'alert');
    flashDiv.innerHTML = `
      <i class="flash-icon icon-${type}" aria-hidden="true"></i>
      <span class="flash-text">${message}</span>
      <button class="flash-close" aria-label="Fechar mensagem">
        <i class="icon-x" aria-hidden="true"></i>
      </button>
    `;
    
    document.body.appendChild(flashDiv);
    
    // Auto-remove após 5 segundos
    setTimeout(() => {
      flashDiv.remove();
    }, 5000);
    
    // Adicionar evento de fechar
    flashDiv.querySelector('.flash-close').addEventListener('click', () => {
      flashDiv.remove();
    });
  }
});
</script>

